extends ../layouts/common.pug
block content
    h1 Login
    if errors
        each error in errors
            .alert.alert-primary=error
    form(action="/auth/login" method='POST')
        .form-group
            label(for='email') Email
            input#exampleInputEmail1.form-control(type='text',name='email',value=value ? value.email:"")
        .form-group
            lable(for='password') Password
            input#phone.form-control(type='password',name='password' value=value ? value.password:"")
        button.btn.btn-primary Create