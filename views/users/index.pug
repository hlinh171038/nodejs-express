extends ../layouts/common.pug
block content
    
    h1 Users
    a.btn.btn-primary.mb-3(href="/users/create") new create
    form(action='/users/search', method='GET', class="d-flex")
      input(type='text' , name='q', class="form-control")
      button(class="btn btn-primary ml-3") search
    table.table
      tr
        th IMAGES
        th NAME
        th PHONE
        th ACTION
      each val,index in users
        tr
          td
            img(src=val.avatar, width="32",height="32")
          td
            span=index +':'+ val.name
          td
            span=val.phone
          td
            a(href="./users/"+ val.id) view