extends ../layouts/common.pug
block content
    h1 Create new task
    if errors
        each error in errors
            .alert.alert-primary=error
    form(action='/users/create', method='POST', enctype="multipart/form-data")
        .form-group
            label(for='exampleInputEmail1') Name
            input#exampleInputEmail1.form-control(type='text',name='name',value=value ? value.name:"")
        .form-group
            lable(for='phone') Phone
            input#phone.form-control(type='number',name='phone',value=value ? value.phone:"")
        .form-group
            lable(for='file') Upload file
            input#phone.form-control(type='file',name='avatar')
        button.btn.btn-primary Create
